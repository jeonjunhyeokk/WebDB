<!--boardtypeCu.ejs-->
<div class="container">
    <h2>게시판 <%= mode === 'create' ? '추가' : '수정' %></h2>
    <form action="/board/type/<%= mode === 'create' ? 'create_process' : 'update_process' %>" method="post">
        <input type="hidden" name="type_id" value="<%= boardtypes && boardtypes[0] ? boardtypes[0].type_id : '' %>" />
        <div class="mb-3">
            <label class="form-label" for="id">제목</label>
            <input class="form-control" type="text" name="title" 
                   value="<%= boardtypes && boardtypes[0] ? boardtypes[0].title : '' %>" 
                   style="width:300px;" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="id">설명</label>
            <input class="form-control" type="text" name="description" 
                   value="<%= boardtypes && boardtypes[0] ? boardtypes[0].description : '' %>" 
                   style="width:300px;" required />
        </div>
        <div class="mb-3">
            <label class="form-label" for="id">페이지당 보여지는 글 수 </label>
            <input class="form-control" type="text" name="numPerPage" 
                   value="<%= boardtypes && boardtypes[0] ? boardtypes[0].numPerPage : '' %>" 
                   style="width:300px;" required />
        </div>

        <% 
            var checkedY = '';
            var checkedN = 'checked';
            if (boardtypes && boardtypes[0] && boardtypes[0].write_YN === 'Y') {
                checkedY = 'checked';
                checkedN = '';
            }
        %>

        <label class="form-label">일반 사용자 쓰기 가능 여부 </label>
        <div class="mb-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="write_YN" id="write_YN1" 
                       value="Y" <%= checkedY %>>
                <label class="form-check-label" for="write_YN1"> Yes </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="write_YN" id="write_YN2" 
                       value="N" <%= checkedN %>>
                <label class="form-check-label" for="write_YN2"> No </label>
            </div>
        </div>

        <% 
            var reCheckedY = '';
            var reCheckedN = 'checked';
            if (boardtypes && boardtypes[0] && boardtypes[0].re_YN === 'Y') {
                reCheckedY = 'checked';
                reCheckedN = '';
            }
        %>

        <label class="form-label" for="id">댓글 가능 여부</label>
        <div class="mb-3">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="re_YN" id="re_YN1" 
                       value="Y" <%= reCheckedY %>>
                <label class="form-check-label" for="re_YN1"> Yes </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="re_YN" id="re_YN2" 
                       value="N" <%= reCheckedN %>>
                <label class="form-check-label" for="re_YN2"> No </label>
            </div>
        </div>
        <button class="btn btn-outline-primary btn-sm" type="submit">
            <%= mode === 'create' ? '생성' : '수정' %>
        </button>
    </form>
</div>