<table class="table table-bordered">
    <tr>
        <td rowspan="6">
            <!-- 제품 이미지 -->
            <img src="<%= product.image %>" style="width:300px;height:300px;" alt="<%= product.name %>">
        </td>
        <td><%= product.name %></td>
    </tr>
    <tr>
        <td>가격 : <%= product.price.toLocaleString() %> 원</td>
    </tr>
    <tr>
        <td>브랜드 : <%= product.brand %></td>
    </tr>
    <tr>
        <td>공급업체 : <%= product.supplier %></td>
    </tr>
    <tr>
        <!-- 로그인 상태일 때만 버튼 표시 -->
        <% if (login) { %> 
            <td>
                <a href="/purchase/detail/<%= product.mer_id %>" style="text-decoration: none;">
                    <button class="btn btn-outline-primary btn-sm" type="button">구매</button>
                </a>
                <form action="/purchase/cart/add" method="post" style="display: inline; margin: 0; padding: 0;">
                    <input type="hidden" value="<%= product.mer_id %>" name="mer_id">
                    <button class="btn btn-outline-primary btn-sm" type="submit">장바구니</button>
                </form>
            </td>
        <% } else { %>
        <% } %>
    </tr>
</table>
