<table class="table table-bordered border-primary table-hover" style="text-align: center;">
  <thead class="table-primary">
    <tr>
      <th>ID</th>
      <th>PW</th>
      <th>이름</th>
      <th>주소</th>
      <th>전화번호</th>
      <th>생일</th>
      <th>클래스</th>
      <th>등급</th>
      <th colspan="2">메뉴</th>
    </tr>
  </thead>
  <tbody>
    <% if (person.length> 0) { %>
      <% person.forEach((p)=> { %>
        <tr>
          <td>
            <%= p.loginid %>
          </td>
          <td>
            <%= p.password %>
          </td>
          <td>
            <%= p.name %>
          </td>
          <td>
            <%= p.address %>
          </td>
          <td>
            <%= p.tel %>
          </td>
          <td>
            <%= p.birth %>
          </td>
          <td>
            <% if (p.class==='CST' ) { %>
              CST(고객)
              <% } else if (p.class==='CEO' ) { %>
                CEO(경영자)
                <% } else if (p.class==='MNG' ) { %>
                  MNG(관리자)
                  <% } else { %>
                    <%= p.class %>
                      <% } %>
          </td>
          <td>
            <%= p.grade %>
          </td>
          <td><a href="/person/update/<%= p.loginid %>" style="text-decoration: none;">수정</a></td>
          <td>
            <a href="/person/delete/<%= p.loginid %>" onclick='if(confirm("정말로 삭제하시겠습니까?")==false){return false}'
              style="text-decoration: none;">삭제</a>
          </td>
        </tr>
        <% }); %>
          <% } else { %>
            <tr>
              <td colspan="10">자료가 없으니 고객 추가 버튼으로 고객을 추가해 주십시오.</td>
            </tr>
            <% } %>
  </tbody>
</table>

<a href="/person/create">
  <button class="btn btn-outline-secondary btn-sm" type="button">고객 추가</button>
</a>